<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buttonborder"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|fill"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|fill">

            <TextView
                android:id="@+id/screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_span="7"
                android:layout_weight="0"
                android:background="#FFFFFF"
                android:freezesText="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="88dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#FFFFFF"
            android:gravity="center|fill">

            <Button
                android:id="@+id/btnAsin"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="sin⁻¹"
                android:textAllCaps="false"
                android:textColor="#FFC5BA"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnAcos"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="cos⁻¹"
                android:textAllCaps="false"
                android:textColor="#FFC5BA"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnAtan"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="tan⁻¹"
                android:textAllCaps="false"
                android:textColor="#FFC5BA"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnPow2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="x²"
                android:textAllCaps="false"
                android:textColor="#FFC5BA"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnLeftBracket"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="("
                android:textColor="#FFC5BA"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnRightBracket"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text=")"
                android:textColor="#FFC5BA"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnBack"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="⌫"
                android:textColor="#FFC5BA"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center|fill">

            <Button
                android:id="@+id/btn2Pow"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="2ˣ"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnRadDeg"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="Deg"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnFac"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="x!"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnClear"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="1"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="C"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnPM"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="+/−"
                android:textColor="#FFC5BA"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="%"
                android:textColor="#FFC5BA"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnDiv"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="÷"
                android:textColor="#FFC5BA"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center|fill">

            <Button
                android:id="@+id/btnSin"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:text="sin"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnCos"
